{
  "compileOnSave": false,
  "compilerOptions": {
    "target":"esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react",
    "allowJs": true,
    "pretty": true,
    "strict": true,
    "rootDir": "src",
    "sourceMap": true,
    "removeComments": false,
    "noEmitHelpers": false,
    "outDir": "lib",
    "declaration": true
  },
  "include": [
    "src",
    "typings"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.spec.js"
  ]
}
